<%- include('../../includes/header.ejs') %>
<%- include('../../includes/navbar.ejs') %>
<div class="main-panel">
    <script>

    </script>
    <div class="content-wrapper">
        <div class="page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/products">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add a New Product</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add A New Product</h4>
                        <form class="forms-sample" action="/admin/products/new" method="post"
                            enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-6">
                                    <!-- NAME FIELD -->
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" class="form-control" name="name"
                                            value="<%= typeof previousInput != 'undefined'? previousInput.name: '' %>">
                                    </div>
                                </div>
                                <!-- PRICE FIELD -->
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Category</label>
                                        <select class="form-control" name="category">
                                            <% for(let category of categories){  %>
                                            <!-- TODO: MAKE ITEM SELECTED ON RELOADED FORM SUBMISSION -->
                                            <option value="<%= category._id %>"><%= category.name%></option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label>Currency</label>
                                        <select class="form-control" name="currency">
                                            <option value="USD">USD</option>
                                            <option value="UAE">UAE</option>
                                            <option value="RWF">RWF</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-5 col-md-5 col-xs-5 col-sm-5">
                                    <div class="form-group">
                                        <label>Price</label>
                                        <input type="number" class="form-control" name="price"
                                            value="<%= typeof previousInput != 'undefined'? previousInput.price: '' %>">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-xs-2 col-sm-2">
                                    <div class="form-group">
                                        <label>Discount %</label>
                                        <input type="number" class="form-control" name="discountPercent"
                                            value="<%= typeof previousInput != 'undefined'? previousInput.discountPercent: '' %>">
                                    </div>
                                </div>
                                <div class="col-lg-5">
                                    <div class="form-group">
                                        <label>Dealine</label>
                                        <input type="date" class="form-control" name="discountDeadline"
                                            value="<%= typeof previousInput != 'undefined'? previousInput.discountDeadline: '' %>">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" name="description"
                                    rows="4"><%= typeof previousInput != 'undefined'? previousInput.description: '' %></textarea>
                            </div>
                            <div class="form-group">
                                <label>Pictures upload</label>
                                <div class="row">
                                    <div class="col-lg-5">
                                        <input type="file" name="mainPicture" class="file-upload-default">
                                        <div class="input-group">
                                            <input type="text" class="form-control file-upload-info" disabled
                                                placeholder="Upload Main & First Picture" />
                                            <span class="input-group-append">
                                                <button class="file-upload-browse btn btn-primary"
                                                    type="button">Upload</button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-lg-2"></div>
                                    <div class="col-lg-5">
                                        <input type="file" name="secondPicture" class="file-upload-default">
                                        <div class="input-group">
                                            <input type="text" class="form-control file-upload-info" disabled
                                                placeholder="Upload Second Picture" />
                                            <span class="input-group-append">
                                                <button class="file-upload-browse btn btn-primary"
                                                    type="button">Upload</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-lg-5">
                                        <input type="file" name="thirdPicture" class="file-upload-default">
                                        <div class="input-group">
                                            <input type="text" class="form-control file-upload-info" disabled
                                                placeholder="Upload Third Picture" />
                                            <span class="input-group-append">
                                                <button class="file-upload-browse btn btn-primary"
                                                    type="button">Upload</button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="input-group col-lg-2"></div>
                                    <div class="col-lg-5">
                                        <input type="file" name="fourthPicture" class="file-upload-default">
                                        <div class="input-group">
                                            <input type="text" class="form-control file-upload-info" disabled
                                                placeholder="Upload Fourth Picture" />
                                            <span class="input-group-append">
                                                <button class="file-upload-browse btn btn-primary"
                                                    type="button">Upload</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%if(typeof error != 'undefined'){%>
                            <div class="alert alert-danger alert-dismissible">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Error:</strong> <%= error %>
                            </div>
                            <%}%>
                            <button type="submit" class="btn col-lg-3 col-md-3 btn-primary mr-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../includes/footer.ejs') %>