<%- include('../../includes/header.ejs') %>
<%- include('../../includes/navbar.ejs') %>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/products">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add a New Product</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add A New Product</h4>
                        <form class="forms-sample" action="/admin/products/new" method="post"
                            enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-6">
                                    <!-- NAME FIELD -->
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" class="form-control" name="name"
                                            value="<%= typeof previousInput != 'undefined'? previousInput.name: '' %>">
                                    </div>
                                </div>
                                <!-- PRICE FIELD -->
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Category</label>
                                        <select class="form-control" name="category">
                                            <% for(let category of categories){  %>
                                            <!-- TODO: MAKE ITEM SELECTED ON RELOADED FORM SUBMISSION -->
                                            <option value="<%= category._id %>"><%= category.name%></option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-1">
                                    <div class="form-group">
                                        <label>Currency</label>
                                        <select class="form-control" name="currency">
                                            <option value="USD">USD</option>
                                            <option value="UAE">UAE</option>
                                            <option value="RWF">RWF</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-5">
                                    <div class="form-group">
                                        <label>Price</label>
                                        <input type="number" class="form-control" name="price"
                                            value="<%= typeof previousInput != 'undefined'? previousInput.price: '' %>">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" name="description"
                                    rows="4"><%= typeof previousInput != 'undefined'? previousInput.description: '' %></textarea>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label>Click To upload the Main Picture</label>
                                        <input type="file" name="mainPicture" class="form-control-file">
                                    </div>
                                    <div class="col-lg-6">
                                        <label>Click To upload the Second Picture</label>
                                        <input type="file" name="secondPicture" class="form-control-file">
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label>Click To upload the Third Picture</label>
                                        <input type="file" name="thirdPicture" class="form-control-file">
                                    </div>
                                    <div class="col-lg-6">
                                        <label>Click To upload the Fourth Picture</label>
                                        <input type="file" name="fourthPicture" class="form-control-file">
                                    </div>
                                </div>
                            </div>
                            <%if(typeof error != 'undefined'){%>
                            <div class="alert alert-danger alert-dismissible">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Error:</strong> <%= error %>
                            </div>
                            <%}%>
                            <button type="submit" class="btn btn-block btn-primary mr-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../includes/footer.ejs') %>